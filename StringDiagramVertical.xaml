<UserControl
    x:Class="StringDiagram.StringDiagramVertical"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StringDiagram"
    x:Name="UC"
    Width="150"
    Height="Auto"
    x:ClassModifier="internal"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{Binding ContainerBrush, RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/StringDiagram;component/ImageSources/Imagesouce.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="170">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto">
            </ColumnDefinition>
            <ColumnDefinition Width="Auto">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">
            </RowDefinition>
            <RowDefinition Height="Auto">
            </RowDefinition>
        </Grid.RowDefinitions>

        <!--  画图用的根容器  -->
        <Canvas
            x:Name="Root"
            Grid.Column="0"
            Width="70"
            Height="600"
            SnapsToDevicePixels="True" />
        <!--  标尺绘画区域  -->
        <Canvas
            x:Name="ruler"
            Grid.Column="1"
            MinWidth="80">
        </Canvas>

    </Grid>
</UserControl>
