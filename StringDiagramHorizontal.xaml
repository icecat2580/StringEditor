<UserControl
    x:Class="StringDiagram.StringDiagramHorizontal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StringDiagram"
    x:Name="UC"
    Width="Auto"
    Height="90"
    x:ClassModifier="internal"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{Binding ContainerBrush, RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/StringDiagram;component/ImageSources/Imagesouce.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!--  整体：上面是标尺，下面是水平连续管  -->
    <Grid Height="170">
        <Grid.RowDefinitions>
            <!--  上方标尺  -->
            <RowDefinition Height="Auto" />
            <!--  下方连续管  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  标尺绘画区域（在上方）  -->
        <Canvas
            x:Name="ruler"
            Grid.Row="0"
            Height="30"
            MinWidth="150"
            Background="Transparent" />

        <!--  画图用的根容器（在下方）  -->
        <Canvas
            x:Name="Root"
            Grid.Row="1"
            Width="600"
            Height="70"
            SnapsToDevicePixels="True" />
    </Grid>
</UserControl>
